#!/usr/bin/env bash

lcli(){
    IDX=$1
    lightning-cli \
        --conf=$LNPATH/conf/lightning.conf \
        --lightning-dir="$LNPATH/lightning-dirs/$IDX" \
        "${@:2}"
}

export -f lcli

lcli-alice(){ lcli 1 $*; }
export -f lcli-alice

lcli-bob(){ lcli 2 $*; }
export -f lcli-bob

lcli-charlie(){ lcli 3 $*; }
export -f lcli-charlie

gettransaction(){
    txid=$1
    RAW_TRANSACTION=$(bitcoin-cli getrawtransaction $txid)
    bitcoin-cli decoderawtransaction $RAW_TRANSACTION
}
export -f gettransaction

getblock(){
    blockheight=$1
    blockhash=$(bitcoin-cli getblockhash $blockheight)
    bitcoin-cli getblock $blockhash
}
export -f getblock

mine(){
    BLOCKS_TO_MINE=$1
    bitcoin-cli generatetoaddress $BLOCKS_TO_MINE $(bitcoin-cli getnewaddress) > /dev/null
}
export -f mine
